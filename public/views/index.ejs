    function cardClicked () {
        var li = $(this).parent();
        var idClicked = li.parent().parent().parent().attr("id");

        if (hasPower && idClicked !== undefined && idClicked !== "pioche") {
            var pseudoToSend;

            if (idClicked == "mainPlayer") {
